def question():
    i = 0
    while i < 2:
        answer = input("Would you like to see the details?  (yes or no)")
        if any(answer.lower() == f for f in ["yes", 'y', '1', 'ye']):
            print("14 Fleming Avenue, Amherst, NS B4H 3W5, Canada")
            break
        elif any(answer.lower() == f for f in ['no', 'n', '0']):
            print("Ok")
            break
        else:
            i += 1
            if i < 2:
                print('Please enter yes or no')
            else:
                print("Nothing done")
                time.sleep (2)


question()


