def question():
    i = 0
    while i < 2:
        answer = input(
            "Would you like to change the data of the ip?  (yes or no) type here:"
        )
        if any(answer.lower() == f for f in ["yes", 'y', '1', 'ye']):
            key = input("ping:")
            key = input("packets to main ip sever:")
            key = input("How long should this last for?")
            break
        elif any(answer.lower() == f for f in ['no', 'n', '0']):
            print("Ok")
            break
        else:
            i += 1
            if i < 2:
                print('Please enter yes or no')
            else:
                print("Nothing done")


